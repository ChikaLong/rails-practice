<div class="container">
  <div class="row mt-3">
    <%= render 'users/info', user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Diaries</h2>

      <% @writes.each do |write| %>
        <table class="table">
          <tr>
            <td>
              <%= attachment_image_tag write, :image, :fill, 50, 50 %><br>
              <%= write.user.name %>
            </td>
            <td>
              <%= link_to write_path(write) do %>
                <%= write.title %>
              <% end %>
            </td>
            <td><%= write.created_at.strftime('%Y/%m/%d') %></td>
            <td id="favorite_button_<%= write.id %>">
              <%= render 'favorites/favorite', write: write %>
            </td>
          </tr>
        </table>
      <% end %>

      <%= paginate @writes %>

    </div>
  </div>
</div>


