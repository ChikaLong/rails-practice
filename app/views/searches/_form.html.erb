<div class="container">
  <div class="col-xs-6 col-xs-offset-3 text-center" style="margin: 5px">
    <% if user_signed_in? %>
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :content %>
        <%= f.select :model, options_for_select({"User" => "user", "Write" => "write"}) %>
        <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
        <%= f.submit "検索" %>
      <% end %>
    <% end %>
  </div>
</div>
