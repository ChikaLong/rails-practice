<% if @model == 'user' %>
  <h3>Users search for "<%= @content %>"</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% elsif @model == "write" %>

  <h3>Diaries search for "<%= @content %>"</h3>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |write| %>
        <tr>
          <td><%= attachment_image_tag write, :image, :fill, 50, 50 %></td>
          <td>
            <%= link_to write_path(write) do %>
              <%= write.title %>
            <% end %>
          </td>
          <td><%= write.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>