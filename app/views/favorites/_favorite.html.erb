<% if write.favorited_by?(current_user) %>
  <%= link_to write_favorites_path(write), method: :delete, remote: true, class: "like" do %>
    <i class="fas fa-star"></i><%= write.favorites.count %>
  <% end %>
<% else %>
  <%= link_to write_favorites_path(write), method: :post, remote: true, class: "like" do %>
    <i class="far fa-star"></i><%= write.favorites.count %>
  <% end %>
<% end %>